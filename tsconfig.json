{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "index.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "*.d.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
